#!/bin/bash -e

# Push the 'cli:5' image to Dockerhub when on the 'master' branch

cd "$(git rev-parse --show-toplevel)"

IMAGE='cyberark/conjur-cli'

function tag_and_push() {
    local image="$1"
    local tag="$2"
    local description="$3"

    echo "TAG = $tag, $description"

    docker tag "$image" "$image:$tag"
    docker push "$image:$tag"
}

if [[ "$BRANCH_NAME" == 'master' ]]; then
    bare_tag='5'
    latest_tag='5-latest'
    stable_tag="5-$(cat VERSION)-stable"

    tag_and_push $IMAGE $bare_tag   'latest image (bare)'
    tag_and_push $IMAGE $latest_tag 'latest image'
    tag_and_push $IMAGE $stable_tag 'stable image'

    # push to legacy `conjurinc/cli5` tag
    docker tag "$image" conjurinc/cli5:latest
    docker push conjurinc/cli5:latest
fi
